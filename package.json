{
  "name": "react-library-boilerplate",
  "version": "0.0.1",
  "author": "wirednkod",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wirednkod/react-library-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/wirednkod/react-library-boilerplate/issues"
  },
  "homepage": "https://github.com/wirednkod/react-library-boilerplate#readme",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run tsc-watch\" \"npm run example\"",
    "example": "cd example && npm start",
    "tsc-watch": "tsc-watch --noClear -p ./tsconfig.json",
    "clean": "rimraf lib/*",
    "build": "yarn run clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs"
  },
  "devDependencies": {
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "styled-components": "^4.4.1",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "files": [
    "lib/"
  ]
}
